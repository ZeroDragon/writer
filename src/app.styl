@import '/_material-icons.styl'
*
  box-sizing: border-box

body
  margin: 0
  padding: 0
  font-family: "Roboto Mono", monospace

.theme.light
  // --background: #fdf6e3
  --background: #e8ebf3
  --foreground: #1f2939
  --app-background: #e8ebf3
  --darker-background: #0000000F
  --lighter-background: #0000001F
  --accent: #556db1
  --secondary: #545454
  --warning: #ff6b6b
  --buttonForeground: #ffffff

.theme.dark
  --background: #10151d
  --foreground: #ffffff
  --app-background: #171f2b
  --darker-background: rgba(0, 0, 0, 0.3)
  --lighter-background: rgba(255, 255, 255, 0.1)
  --accent: #a87ffb
  --secondary: #353535
  --warning: #ff4c4c
  --buttonForeground: #ffffff

.theme
  font-size: 16px
  background-color: var(--app-background)
  color: var(--foreground)
  transition: background-color 0.3s ease, color 0.3s ease

.app
  min-height: 100vh
  display: grid
  grid-template-columns: 1fr 50px
  grid-template-rows: 1fr 50px
  grid-template-areas:\
    "content sidebar"\
    "footer footer"
  gap: 0
  padding: 0

a
  color: var(--accent)
  text-decoration: none
  &:hover
    text-decoration: underline

.content, .footer, .sidebar
  border-radius: 0

.icon
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

.savingIndicator
  position: fixed
  top: 10px
  left: 20px
  font-size: 14px
  opacity: 0
  color: var(--accent)
  transition: opacity 0.5s ease-in-out
  &.saving
    opacity: 1

/* regions */
.sidebar
  font-weight: 300
  grid-area: sidebar
  padding: 4px
  min-height: 0
  overflow: hidden
  opacity: 1
  transition: opacity 0.3s ease-in-out

  &.writing
    opacity: 0

  ul
    list-style: none
    padding: 0
    margin: 0
  li
    width: 42px
    position: relative
  .item
    display: flex
    align-items: center
    padding: 10px 8px
    border-radius: 4px
    z-index: 10

    .icon:hover
      cursor: pointer
      & + .label
        opacity: 0.6
    span
      opacity: 0.6
    .label
      font-size: 14px
      position: fixed
      right: 60px
      text-align: right
      width: 100px
      pointer-events: none
      margin-left: 8px
      opacity: 0
      transition: opacity 0.2s ease-in-out
      z-index: 6

/* main content area */
.content
  grid-area: content
  padding: 50px 100px
  min-height: 0
  overflow: auto
  outline: none
  caret-color: var(--accent)
  scroll-behavior: smooth
  max-height: calc(80vh)
  &::selection
    background: var(--accent)
    color: var(--buttonForeground)
  // style scrollbars
  &::-webkit-scrollbar-track
    background: transparent
  &::-webkit-scrollbar
    width: 8px
  &::-webkit-scrollbar-thumb
    background: var(--lighter-background)
    border-radius: 4px
  &.encrypted
    color: var(--accent)
    word-break: break-word
    pointer-events: none
    user-select: none
    position: relative
    &:before
      content: ""
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background-color: var(--app-background)
      opacity: 0.7
      z-index: 5
    &:after
      font-family: "Material Icons Outlined"
      content: "lock"
      font-size: 30vh
      position: absolute
      top: 50%
      left: 50%
      z-index: 5
      color: var(--accent)
      opacity: 0.4
      transform: translate(-50%, -50%)
  &.dimmed
    & > *
      opacity: 0.2
    .focus
      opacity: 1
  & > *
    transition: opacity 0.3s ease-in-out

/* footer */
.footer
  grid-area: footer
  display: flex
  align-items: center
  justify-content: center
  padding: 4px 0
  border-top: 1px solid var(--lighter-background)
  font-size: 14px
  .icon
    cursor: pointer
  span
    opacity: 0.4
  input
    width: 50px
    opacity: 0.4
    &.timeset
      width: 80px

input
  background-color: transparent
  border: none
  color: var(--foreground)
  padding: 4px 8px
  border-radius: 4px
  text-align: center
  &:focus
    outline: none
    box-shadow: 0 0 5px var(--accent)

.modal
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, 0.5)
  display: flex
  align-items: center
  justify-content: center
  z-index: 1000
  font-size: 16px

  &.active
    display: flex

  strong
    color: var(--accent)
  ul
    list-style: none
    padding: 0
    margin: 0
  
  .warning
    font-weight: bold
    color: var(--warning)

  .modal-content
    background-color: var(--app-background)
    padding: 20px
    border-radius: 8px
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2)
    max-width: 90%
    max-height: 90%
    overflow: auto
    border: 1px solid var(--accent)
    .message
      .txt
        max-width: 570px
        margin-bottom: 10px
      .encryptInputs
        display: flex
        flex-wrap: wrap;
        input
          margin: 0 5px
          flex: 1
          margin-bottom: 10px
          background-color: var(--darker-background)
    .error-message
      color: var(--warning)
      margin-bottom: 10px
      background-color: var(--darker-background)
      padding: 10px
      border-radius: 8px
      text-align: right
  .title
    font-size: 1.5em
    color: var(--accent)
    font-weight: 800
    margin-bottom: 10px
  .buttons
    display: flex
    justify-content: space-between
    flex-direction: row-reverse
    margin-top: 20px
    button
      color: var(--buttonForeground)
      border: none
      padding: 10px 20px
      border-radius: 4px
      cursor: pointer
      font-size: 1em
      opacity: 0.5
      transition: opacity 0.2s ease-in-out
      &:hover
        opacity: 1
      &.primary
        background-color: var(--accent)
      &.secondary
        background-color: var(--secondary)
      &.warning
        background-color: var(--warning)

.toolBar
  position: fixed
  bottom: 60px
  left: 50%
  transform: translateX(-50%)
  border: 1px solid transparent
  border-radius: 8px
  padding: 8px
  display: flex
  gap: 4px
  opacity: 0.3
  transition: opacity 0.3s ease-in-out
  &.writing
    opacity: 0
  &:hover
    opacity: 1
    background-color: var(--background)
    border: 1px solid var(--accent)
  .toolButton
    background: none
    border: none
    padding: 4px
    border-radius: 4px
    cursor: pointer
    color: var(--foreground)
    display: flex
    align-items: center
    justify-content: center
    font-size: 20px
    opacity: 0.6
    transition: background-color 0.2s ease-in-out, opacity 0.2s ease-in-out
    &:hover
      background-color: var(--accent)
      color: var(--buttonForeground)
      opacity: 1

.dragOverlay
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: var(--app-background)
  display: none
  align-items: center
  justify-content: center
  z-index: 2000
  click-events: none
  opacity: 0.9
  &.active
    display: flex
  .drag-text
    opacity: 0.5
    color: var(--foreground)
    font-size: 24px
    font-weight: bold
    padding: 20px 40px
    border: 2px dashed var(--foreground)
    border-radius: 16px

/* responsive: stack on small screens */
@media (max-width: 768px)
  .app
    grid-template-columns: 1fr
    grid-template-rows: 50px 1fr auto
    grid-template-areas:\
      "sidebar"\
      "content"\
      "footer"

  .content
    padding: 20px

  .sidebar
    ul
      display: flex
      flex-direction: row
      justify-content: center
      li .item .label
        top: 50px
        left: 50%
        transform: translateX(-50%)
        text-align: center
        width: 200px
