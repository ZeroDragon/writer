$darkPalette = {
  background: #10151d
  foreground: #ffffff
  appBackground: #171f2b
  darkerBackground: rgba(0, 0, 0, 0.3)
  lighterBackground: rgba(255, 255, 255, 0.1)
  accent: #a87ffb
  secondary: #353535
  warning: #ff4c4c
}

*
  box-sizing: border-box

body.dark
  --background: $darkPalette.background
  --foreground: $darkPalette.foreground
  --app-background: $darkPalette.appBackground
  --darker-background: $darkPalette.darkerBackground
  --lighter-background: $darkPalette.lighterBackground
  --accent: $darkPalette.accent
  --secondary: $darkPalette.secondary
  --warning: $darkPalette.warning

body
  margin: 0
  padding: 0
  background-color: var(--background)
  color: var(--foreground)
  font-family: "Roboto Mono", monospace
  font-size: 16px
.app
  min-height: 100vh
  display: grid
  grid-template-columns: 1fr 50px
  grid-template-rows: 1fr auto
  grid-template-areas:\
    "content sidebar"\
    "footer footer"
  gap: 0
  padding: 0

.header, .content, .footer
  background-color: var(--app-background)
  border-radius: 0

/* regions */
.header
  grid-area: header
  display: flex
  align-items: center
  justify-content: space-between
  padding: 12px 16px

.sidebar
  font-weight: 300
  grid-area: sidebar
  padding: 4px
  min-height: 0
  overflow: hidden
  position: fixed
  right: 0

  ul
    list-style: none
    padding: 0
    margin: 0
  li
    width: 42px
    position: relative
  .item
    display: flex
    align-items: center
    padding: 10px 8px
    border-radius: 4px
    z-index: 10

    .icon:hover
      cursor: pointer
      & + .label
        opacity: 0.6
    span
      opacity: 0.6
    .label
      font-size: 0.8em
      position: fixed
      right: 60px
      text-align: right
      width: 110px
      pointer-events: none
      margin-left: 8px
      opacity: 0
      transition: opacity 0.2s ease-in-out

/* main content area */
.content
  grid-area: content
  padding: 50px 100px
  min-height: 0
  overflow: auto
  outline: none
  caret-color: var(--accent)
  scroll-behavior: smooth
  .align-left
    text-align: left
  .align-center
    text-align: center
  .align-right
    text-align: right
  .align-justify
    text-align: justify

/* footer */
.footer
  grid-area: footer
  display: flex
  align-items: center
  justify-content: center
  padding: 4px 0
  border-top: 1px solid var(--lighter-background)
  font-size: 0.8em
  span
    opacity: 0.4

.modal
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, 0.5)
  display: flex
  align-items: center
  justify-content: center
  z-index: 1000

  &.active
    display: flex

  .modal-content
    min-width: 50%
    background-color: var(--app-background)
    padding: 20px
    border-radius: 8px
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2)
    max-width: 90%
    max-height: 90%
    overflow: auto
  .title
    font-size: 1.5em
    color: var(--accent)
    font-weight: 800
  .buttons
    display: flex
    justify-content: space-between
    flex-direction: row-reverse
    margin-top: 20px
    button
      color: var(--foreground)
      border: none
      padding: 10px 20px
      border-radius: 4px
      cursor: pointer
      font-size: 1em
      opacity: 0.5
      transition: opacity 0.2s ease-in-out
      &:hover
        opacity: 1
      &.primary
        background-color: var(--accent)
      &.secondary
        background-color: var(--secondary)
      &.warning
        background-color: var(--warning)

