*
  box-sizing: border-box
  --background: #10151d
  --foreground: #ffffff
  --app-background: #171f2b
  --darker-background: rgba(0, 0, 0, 0.3)
  --lighter-background: rgba(255, 255, 255, 0.1)
  --accent: #a87ffb

body
  margin: 0
  padding: 0
  background-color: var(--background)
  color: var(--foreground)
  font-family: "Roboto Mono", monospace
  font-size: 16px
.app
  min-height: 100vh
  display: grid
  grid-template-columns: 50px 1fr
  grid-template-rows: 1fr auto
  grid-template-areas:\
    "sidebar content"\
    "footer footer"
  gap: 0
  padding: 0

.header, .content, .footer
  background-color: var(--app-background)
  border-radius: 0

/* regions */
.header
  grid-area: header
  display: flex
  align-items: center
  justify-content: space-between
  padding: 12px 16px

.sidebar
  font-weight: 300
  grid-area: sidebar
  padding: 4px
  min-height: 0
  overflow: hidden
  position: fixed

  ul
    list-style: none
    padding: 0
    margin: 0
  li
    width: 42px
    position: relative
  .item
    display: flex
    align-items: center
    padding: 10px 8px
    border-radius: 4px
    z-index: 10

    .icon:hover
      cursor: pointer
      & + .label
        opacity: 0.6
    span
      opacity: 0.6
    .label
      position: fixed
      left: 34px
      width: 110px
      pointer-events: none
      margin-left: 8px
      opacity: 0
      transition: opacity 0.2s ease-in-out

/* main content area */
.content
  grid-area: content
  padding: 50px 100px
  min-height: 0
  overflow: auto
  outline: none
  .align-left
    text-align: justify
  .align-center
    text-align: center
  .align-right
    text-align: right

/* footer */
.footer
  grid-area: footer
  display: flex
  align-items: center
  justify-content: center
  padding: 4px 0
  border-top: 1px solid var(--lighter-background)

