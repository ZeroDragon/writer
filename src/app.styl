*
  box-sizing: border-box
  --background: #10151d
  --foreground: #ffffff
  --app-background: #171f2b
  --hover-background: rgba(0, 0, 0, 0.3)

body
  margin: 0
  padding: 0
  background-color: var(--background)
  color: var(--foreground)
  font-family: "Roboto Mono", monospace
  font-size: 16px
.app
  min-height: 100vh
  display: grid
  grid-template-columns: 200px 1fr
  grid-template-rows: 1fr auto
  grid-template-areas:\
    "sidebar content"\
    "sidebar footer"
  gap: 16px
  padding: 16px

.header, .content, .footer
  background-color: var(--app-background)

/* regions */
.header
  grid-area: header
  display: flex
  align-items: center
  justify-content: space-between
  padding: 12px 16px
  border-radius: 8px

.sidebar
  font-weight: 300
  grid-area: sidebar
  padding: 4px
  border-radius: 8px
  min-height: 0
  overflow: auto

  ul
    list-style: none
    padding: 0
    margin: 0

  .item
    display: flex
    align-items: center
    padding: 10px 8px
    border-radius: 4px
    transition: background-color 0.3s ease

    &:hover
      background-color: var(--hover-background)
      cursor: pointer
    & span
      opacity: 0.6
    & .label
      margin-left: 8px

/* main content area */
.content
  grid-area: content
  padding: 20px
  border-radius: 8px
  min-height: 0
  overflow: auto
  outline: none
  font-size: 1rem

/* footer */
.footer
  grid-area: footer
  padding: 12px 16px
  border-radius: 8px
  display: flex
  align-items: center
  justify-content: center

